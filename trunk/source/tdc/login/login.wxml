<!--tdc/login/login.wxml-->
<view class="page">
  <form bindsubmit="loginSubmit">
    <view class="page-username">
      <text>用户名</text>
      <input type="text" name="username" placeholder="请输入用户名" />
    </view>

    <view class="page-password">
      <text>密码</text>
      <input type="password" name="password" placeholder="请输入密码" />
    </view>

    <view class="page-captcha">
      <text>验证码</text>
      <input type="text" name="captcha" placeholder="请输入验证码" />
    </view>

    <view>
      <canvas class='canvas' style="width:{{cvs.width}};height:{{cvs.height}};" canvas-id="canvas" bindtap='onReady'></canvas>
    </view>

    <view>
      <button formType="submit">登录</button>
    </view>

    <view>
      <button bindtap="register">注册</button>
      <button bindtap="forgetPassword">忘记密码</button>
    </view>
  </form>
</view>
