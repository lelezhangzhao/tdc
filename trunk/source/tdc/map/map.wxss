/* tdc/map/map.wxss */
.page{
  font-size: 28rpx;
}
.top-view{
  height: 100rpx;
  display: flex;
  flex-direction: row;
}
.input-view{
  background-color: #EEE;
  height: 60rpx;
  width: 60%;
  margin-left: 5%;
  margin-right: 10%;
  border-radius: 50rpx;
  padding: 0 20rpx;
}
.map{
  width: 100%;
  height: 800rpx;
}
.map-image{
  margin-top: 8rpx;
  width: 30rpx;
  height: 40rpx;
}
.search-view{
  width: 100rpx;
  text-align: right;
}
.search-label{
  font-size: 32rpx;
  width: 100rpx;
}
.confirm-button{
  margin-top: 5rpx;
  margin-right: 30rpx;
  height: 60rpx;
  width: 120rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  padding: 0;
  text-align: center;
}
.mine-image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 50rpx;
  margin-left: 90%;
}