/* tdc/arbitrationInfo/arbitrationInfo.wxss */
.page{
  margin: 0 5%;
  width: 90%;
}
.checkbox{
  margin-left: 300rpx;
}
.arbitration-title-view{
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
}
.title{
  font-size: 30rpx;
  font-weight: bold;
}

.content{
  font-size: 28rpx;
}

.bottom-view{
  position: absolute;
  display: flex;
  flex-direction: row;
  bottom: 1rpx;
  left: 0;
  width: 100%;
  height: 100rpx;
  border-top: #666 solid 2rpx;
  text-align: center;
}
.connect-arbitrator{
  display: inline-block;
  width: 50%;
  line-height: 100rpx;
  font-size: 28rpx;
}
.connect-arbitrated{
  width: 50%;
  line-height: 100rpx;
  font-size: 28rpx;
  
}
.connect-seperator{
  display: inline-block;
  width: 2rpx;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  background-color: #666;
}
