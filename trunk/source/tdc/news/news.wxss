/* tdc/news/news.wxss */
.page{
  margin: 0 5%;
  width: 90%;
}

.top-view{
  height: 50rpx;
}
.middle-view{
  margin-top: 50rpx;
}
.item-view{
  display: flex;
  flex-direction: row;
  height: 200rpx;
}
.left-view{
  margin-right: 30rpx;
}
.logo-photo-image{
  width: 120rpx;
  height: 120rpx;
}
.item-title{
  display: flex;
  flex-direction: row;
}
.delete-image{
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  margin-left: 50rpx;
  margin-top: 5rpx;
}

.bottom-view{
  position: absolute;
  bottom: 10rpx;
  margin: 0 10%;
  width: 70%;
}
.top-title-label{
  font-size: 32rpx;
  color: #A9A9A9;
  
}

.title-label{
  font-size: 30rpx;
  width: 400rpx;
  overflow:hidden;
}
.content-label{
  display: block;
  font-size: 28rpx;
  color: #A9A9A9;
  width: 500rpx;
  overflow:hidden;
  line-height: 100%;
}