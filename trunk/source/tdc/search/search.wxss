/* tdc/search/search.wxss */

.page{
  margin: 0 5%;
  width: 90%;
}

.search-view{
  display: flex;
  flex-direction: row;
  padding: 0 0rpx 0 30rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #EEE;
  
}

.role-view{
  font-size: 30rpx;
  color: #666;
  
}
.picker-class{
  display: inline-block;
  font-size: 30rpx;
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.angle-image{
  position: absolute;
  margin-top: 26rpx;
  margin-left: 10rpx;
  width: 12rpx;
  height: 8rpx;
}

.seperator-view{
  width: 2rpx;
  margin: 10rpx 30rpx;
  background-color: #CCC;
}

.input-view{
  font-size: 30rpx;
  height: 60rpx;
  margin-right: 70rpx;
  
}

.search-input{
  height: 60rpx;
  line-height: 60rpx;

}

.icon-view{
  display: inline-block;
  margin-right: 10rpx;
}
.bottom-view{
  margin-top: 50rpx;
}
.search-history-view{
  font-size: 30rpx;
  color: #666;
}
.search-hot-view{
  font-size: 30rpx;
  color: #666;
  margin-top: 30rpx;
}
.search-history-item-view{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.search-hot-item-view{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.search-history-key-words-view{
  margin: 20rpx 20rpx 0 0;
  padding: 0 20rpx;
  background-color: #ECECEC;
  border-radius: 30rpx;
}
.search-hot-key-words-view{
  margin: 20rpx 20rpx 0 0;
  padding: 0 20rpx;
  background-color: #ECECEC;
  border-radius: 30rpx;
}